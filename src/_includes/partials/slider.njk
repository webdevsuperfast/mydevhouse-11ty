{% if portfolio %}
  <div class="swiper overflow-visible w-[85%] py-20">
    <div class="swiper-wrapper">
      {% for item in portfolio %}
        <div class="swiper-slide">
          <img class="object-cover w-full h-[240px] sm:h-[320px] md:h-[360px] 2xl:h-[540px] rounded-2xl rounded-tl-none rounded-br-none shadow-lg shadow-gray-900" data-src="{% imageUrl item.featuredImage.node.thumbnail %}" alt="{{ item.title }}" class="w-full swiper-lazy">
          <div class="swiper-lazy-preloader"></div>
        </div>
      {% endfor %}
    </div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </div>
{% endif %}