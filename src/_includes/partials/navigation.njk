<div 
  class="fixed top-0 left-0 z-10 w-full h-full transition-all duration-300 ease-in-out navigation-container bg-neutral-900" 
  x-cloak
  :class="{ 'block' : navOpen, 'hidden' : !navOpen }" 
>
  {% if navigation %}
    <nav class="main-navigation relative top-[50%] -translate-y-[50%] text-center font-barlow-condensed">
      {% for nav in navigation %}
        <a class="block px-6 py-2 text-2xl font-black leading-none text-gray-100 uppercase transition-all md:text-6xl lg:py-6 hover:text-rose-900" id="{{ nav.id }}" href="{{ nav.path }}" class="navigation-link">
          {{ nav.label }}
        </a>
      {% endfor %}
    </nav>
  {% endif %}
</div>