<div 
  class="navigation-container w-full h-full fixed top-0 left-0 bg-neutral-900 z-10 transition-all duration-300 ease-in-out" 
  x-cloak
  :class="{ 'block' : navOpen, 'hidden' : !navOpen }" 
>
  {% if navigation %}
    <nav class="main-navigation relative top-[50%] -translate-y-[50%] text-center font-barlow-condensed">
      {% for nav in navigation %}
        <a class="block uppercase font-black text-2xl md:text-6xl py-6 px-6 transition-all text-gray-100 hover:text-rose-900" id="{{ nav.id }}" href="{{ nav.path }}" class="navigation-link">
          {{ nav.label }}
        </a>
      {% endfor %}
    </nav>
  {% endif %}
</div>