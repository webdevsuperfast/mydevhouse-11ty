<!DOCTYPE html>
<html
  lang="en"
  class="scroll-smooth"
  x-data="{
    setTheme: () => {
      if (localStorage.theme === 'dark') {
        localStorage.theme = 'light';
        document.documentElement.classList.remove('dark');
      } else {
        localStorage.theme = 'dark';
        document.documentElement.classList.add('dark');
      }
    }
  }"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ site.title }}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Barlow:ital,wght@0,400;0,700;1,400;1,700&family=Barlow+Condensed:wght@700&display=swap"
      rel="preload"
      as="style"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <link
      rel="preload"
      href="/assets/main.bundle.css"
      as="style"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=Barlow:ital,wght@0,400;0,700;1,400;1,700&family=Barlow+Condensed:wght@700&display=swap"
        rel="stylesheet"
      />
      <link rel="stylesheet" href="/assets/main.bundle.css" />
    </noscript>
    <script src="/assets/main.bundle.js" defer></script>
  </head>
  <body
    class="{{ 'debug-screens' if env.devMode }} bg-fixed lazy bg-light dark:bg-dark text-gray-500 dark:text-gray-100"
  >
    {% include 'partials/header.njk' %}

    <main class="site-content">
      {% block body %}
      {{ content | safe }}
      {% endblock %}
    </main>

    {% include 'partials/footer.njk' %}
  </body>
</html>
